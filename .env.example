# ==============================================
# Baked Bliss Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in values

# Server Configuration
PORT=3500
NODE_ENV=development

# Database Configuration (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=baked_bliss_dev
DB_USER=your_database_user
DB_PASS=your_database_password

# Authentication
AUTH_JWT_SECRET=your_jwt_secret_key_here
AUTH_JWT_EXPIRES_IN=7d
AUTH_REFRESH_TOKEN_SECRET=your_refresh_token_secret
AUTH_REFRESH_TOKEN_EXPIRES_IN=30d

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Email Configuration (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@bakedbliss.com

# Stripe Payment Integration
STRIPE_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Application URLs
APP_URL=http://localhost:3500
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=debug
